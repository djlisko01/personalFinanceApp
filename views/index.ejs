<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="#" />
    <!-- Boostrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Custom CSS -->
    <link type="text/css" rel="stylesheet" href="./stylesheets/style.css" />
    <title>Personal Finance!</title>
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <div class="row">
          <div class="col-8">
            <div class="incomeContainer">
              <!-- Submit income data-->
              <form id="anonIncomeSubmission" action="">
                <input
                  id="salary"
                  name="salary"
                  type="number"
                  min="0"
                  placeholder="Salary"
                  required
                />
                <select id="state" name="state" required>
                  <option value="" disable selected hidden>
                    Select Domicile State
                  </option>
                  <option value="New York">New York</option>
                  <option value="California">California</option>
                  <option value="Texas">Texas</option>
                  <option value="Florida">Florida</option>
                </select>
                <select id="marital" name="marital" required>
                  <option value="" disable selected hidden>
                    Select Marital Status
                  </option>
                  <option value="Single">Single</option>
                  <option value="MFJ">Married Filing Jointly</option>
                  <option value="MFS">Married Filing Separately</option>
                </select>
                <button type="submit" id="incomeButton">Submit</button>
                <span id="deleteIncomeSpan"> </span>
              </form>
            </div>
            <!-- incomeContainer end -->
            <div class="row" id="taxAmountDiv"></div>
          </div>
          <!-- col-8 end -->
          <div class="col-4">
            <div class="loginContainer" id="loginContainerDiv">
              <form id="loginSubmission" action="">
                <label for="username"><b>Username</b></label>
                <input
                  type="text"
                  placeholder="Enter Username"
                  name="username"
                  required
                />

                <label for="password"><b>Password</b></label>
                <input
                  type="password"
                  placeholder="Enter Password"
                  name="password"
                  required
                />
                <button type="submit" id="loginButton">Login</button>

                <span class="createNewUser"
                  ><a href="/signUp">Create New User</a></span
                >
              </form>
            </div>
            <!-- loginContainer end -->
          </div>
          <!-- col-4 end -->
        </div>
      </div>
    </div>

    <!-- incomeSubmission.js-->
    <script type="module" src="../javascripts/incomeSubmission.js"></script>

    <!-- checkLogin.js-->
    <script type="module" src="../javascripts/checkLogin.js"></script>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
